-- // Grow a Garden - Auto Pet Center
-- // Tự động gom toàn bộ Pet về giữa vườn rồi đứng im
-- // Có nút bật/tắt (GUI)

-- Services
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- GUI
local ScreenGui = Instance.new("ScreenGui", LocalPlayer:WaitForChild("PlayerGui"))
local Frame = Instance.new("Frame", ScreenGui)
local Button = Instance.new("TextButton", Frame)

ScreenGui.Name = "AutoPetCenterGUI"

Frame.Size = UDim2.new(0, 200, 0, 60)
Frame.Position = UDim2.new(0.5, -100, 0.2, 0)
Frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
Frame.Active = true
Frame.Draggable = true

Button.Size = UDim2.new(1, 0, 1, 0)
Button.Text = "Auto Pet Center: OFF"
Button.BackgroundColor3 = Color3.fromRGB(150, 0, 0)
Button.TextColor3 = Color3.fromRGB(255,255,255)
Button.Font = Enum.Font.SourceSansBold
Button.TextSize = 18

-- Auto gom Pet
local autoPet = false
-- ⚠️ chỉnh lại nếu giữa vườn có tọa độ khác
local centerPos = Vector3.new(0, 5, 0)  

local function movePetsToCenter()
    while autoPet do
        task.wait(1)
        local petsFolder = LocalPlayer:FindFirstChild("Pets") or LocalPlayer:FindFirstChild("PetFolder")
        if petsFolder then
            for _, pet in pairs(petsFolder:GetChildren()) do
                if pet:IsA("Model") and pet.PrimaryPart then
                    -- Dịch chuyển Pet về giữa vườn
                    pet:SetPrimaryPartCFrame(CFrame.new(centerPos))
                end
            end
        end
    end
end

-- Toggle Button
Button.MouseButton1Click:Connect(function()
    autoPet = not autoPet
    if autoPet then
        Button.Text = "Auto Pet Center: ON"
        Button.BackgroundColor3 = Color3.fromRGB(0, 150, 0)
        task.spawn(movePetsToCenter)
    else
        Button.Text = "Auto Pet Center: OFF"
        Button.BackgroundColor3 = Color3.fromRGB(150, 0, 0)
    end
end)
