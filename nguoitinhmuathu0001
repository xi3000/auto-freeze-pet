--// Freeze Pets GUI (Grow a Garden)
-- ON = t·∫•t c·∫£ pet ƒë·ª©ng im, pet spawn m·ªõi c≈©ng b·ªã ƒë√≥ng bƒÉng
-- OFF = pet ho·∫°t ƒë·ªông l·∫°i b√¨nh th∆∞·ªùng

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- GUI
local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
local ToggleButton = Instance.new("TextButton", ScreenGui)
ToggleButton.Size = UDim2.new(0, 180, 0, 50)
ToggleButton.Position = UDim2.new(0.05, 0, 0.2, 0)
ToggleButton.Text = "üî¥ Freeze Pets: OFF"
ToggleButton.BackgroundColor3 = Color3.fromRGB(200, 0, 0)
ToggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
ToggleButton.Font = Enum.Font.SourceSansBold
ToggleButton.TextSize = 20
ToggleButton.Draggable = true

-- Tr·∫°ng th√°i
local frozen = false

-- H√†m x·ª≠ l√Ω ƒë√≥ng bƒÉng
local function setPetsFrozen(state)
    for _, obj in ipairs(workspace:GetDescendants()) do
        if obj:IsA("Model") and string.find(obj.Name:lower(), "pet") then
            for _, part in ipairs(obj:GetDescendants()) do
                if part:IsA("BasePart") then
                    part.Anchored = state
                end
            end
        end
    end
end

-- Theo d√µi pet m·ªõi spawn
workspace.DescendantAdded:Connect(function(obj)
    if frozen and obj:IsA("BasePart") and obj.Parent and obj.Parent:IsA("Model") then
        if string.find(obj.Parent.Name:lower(), "pet") then
            task.wait(0.1) -- ch·ªù pet spawn ƒë·∫ßy ƒë·ªß
            obj.Anchored = true
        end
    end
end)

-- Toggle button
ToggleButton.MouseButton1Click:Connect(function()
    frozen = not frozen
    if frozen then
        ToggleButton.Text = "üü¢ Freeze Pets: ON"
        ToggleButton.BackgroundColor3 = Color3.fromRGB(0, 200, 0)
        setPetsFrozen(true)
    else
        ToggleButton.Text = "üî¥ Freeze Pets: OFF"
        ToggleButton.BackgroundColor3 = Color3.fromRGB(200, 0, 0)
        setPetsFrozen(false)
    end
end)
